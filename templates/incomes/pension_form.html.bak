{% extends "base.html" %}

{% block title %}年金収入 - {% if income_id %}編集{% else %}新規登録{% endif %}{% endblock %}
{% block page_title %}年金収入 - {% if income_id %}編集{% else %}新規登録{% endif %}{% endblock %}

{% block content %}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            {% if income_id %}
                年金収入編集 <span class="badge badge-secondary">#{{ income_id }}</span>
            {% else %}
                年金収入新規登録
            {% endif %}
        </h3>
        <a href="/incomes/pension" class="btn btn-secondary btn-sm">
            <i class="material-icons">arrow_back</i> 一覧に戻る
        </a>
    </div>
    <div class="card-body">
        <form id="pensionIncomeForm">
            <input type="hidden" name="id" value="{{ income_id or '' }}">
            
            <div class="form-group">
                <label class="form-label">年金名 <span class="text-danger">*</span></label>
                <input type="text" name="name" class="form-control" placeholder="例：国民年金、厚生年金" required>
            </div>
            
            <div class="form-group">
                <label class="form-label">説明</label>
                <input type="text" name="description" class="form-control" placeholder="詳細説明（任意）">
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">受給開始年 <span class="text-danger">*</span></label>
                        <select name="start_year" class="form-control" required>
                            <!-- JavaScript で動的に生成 -->
                        </select>
                        <small class="form-text text-muted">年金受給開始年度</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">受給終了年 <span class="text-danger">*</span></label>
                        <select name="end_year" class="form-control" required>
                            <!-- JavaScript で動的に生成 -->
                        </select>
                        <small class="form-text text-muted">想定される受給終了年度</small>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label class="form-label">月額受給額（万円） <span class="text-danger">*</span></label>
                <input type="number" name="monthly_amount" class="form-control" placeholder="15" min="0" step="1" required>
                <small class="form-text text-muted">税金・社会保険料控除後の手取り額</small>
            </div>
            
            <div class="form-group mt-4">
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary btn-block" id="submitButton">
                            <i class="material-icons">save</i>
                            <span class="submit-text">
                                {% if income_id %}年金収入を更新{% else %}年金収入を登録{% endif %}
                            </span>
                        </button>
                    </div>
                    <div class="col-md-6">
                        <a href="/incomes/pension" class="btn btn-secondary" id="cancelButton">キャンセル</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- FAB -->
<div class="form-fab-container" id="fabContainer">
    <a href="/incomes/pension" class="fab fab-cancel" id="cancelFabButton">
        <i class="material-icons">close</i>
    </a>
    <button type="button" class="fab fab-add" id="formFabButton" onclick="submitFormViaFab()">
        <i class="material-icons">save</i>
    </button>
</div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // 年度セレクトボックスを初期化
    initializeYearSelects();
    
    // 編集モードの場合はデータを読み込み
    const incomeId = document.querySelector('[name="id"]').value;
    if (incomeId) {
        loadIncomeData(incomeId);
    }
    
    // フォーム送信イベント設定
    setupFormHandler();
});

// フォーム送信イベント設定
function setupFormHandler() {
    const form = document.getElementById('pensionIncomeForm');
    if (form) {
        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            await handleFormSubmit(this);
        });
    }
}

// フォーム送信処理
async function handleFormSubmit(form) {
    if (!validateRequired(form)) {
        return;
    }
    
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    
    // 数値変換（万円を円に変換）
    data.monthly_amount = (parseFloat(data.monthly_amount) || 0) * 10000;
    data.annual_amount = data.monthly_amount * 12;
    
    data.start_year = parseInt(data.start_year) || 2024;
    data.end_year = parseInt(data.end_year) || 2050;
    
    const isUpdate = data.id && data.id !== '';
    const method = isUpdate ? 'PUT' : 'POST';
    const messageType = isUpdate ? '更新' : '登録';
    
    // 送信ボタンを無効化してローディング状態にする
    const submitButton = form.querySelector('button[type="submit"]');
    const submitText = submitButton.querySelector('.submit-text');
    const originalText = submitText.textContent;
    
    submitButton.disabled = true;
    submitText.textContent = '処理中...';
    
    try {
        const response = await fetch('/api/pension-incomes', {
            method: method,
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
            showToast(`年金収入を${messageType}しました`, 'success');
            // 一覧ページに戻る
            setTimeout(() => {
                window.location.href = '/incomes/pension';
            }, 1000);
        } else {
            showToast(result.message || `年金収入の${messageType}に失敗しました`, 'error');
        }
    } catch (error) {
        console.error('Error submitting form:', error);
        showToast(`年金収入の${messageType}に失敗しました`, 'error');
    } finally {
        submitButton.disabled = false;
        submitText.textContent = originalText;
    }
}

// 編集時のデータ読み込み
async function loadIncomeData(incomeId) {
    try {
        const response = await fetch('/api/pension-incomes');
        const incomes = await response.json();
        const income = incomes.find(item => item.id == incomeId);
        
        if (income) {
            // フォームに値を設定（円を万円に変換）
            document.querySelector('[name="name"]').value = income.name || '';
            document.querySelector('[name="description"]').value = income.description || '';
            document.querySelector('[name="monthly_amount"]').value = (income.monthly_amount / 10000).toFixed(1);
            document.querySelector('[name="start_year"]').value = income.start_year;
            document.querySelector('[name="end_year"]').value = income.end_year;
        }
    } catch (error) {
        console.error('Error loading income data:', error);
        showToast('データの読み込みに失敗しました', 'error');
    }
}
</script>
{% endblock %}
